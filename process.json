{
	"apps": [
		{
			"name": "{{name}}",
			"script": "./src/server.js",
			"exec_mode": "cluster",
			"instances": 4,
			"max_memory_restart": "1G",
			"autorestart": true,
			"watch": ["src", "config"],
			"env": {
				"NODE_ENV": "production",
				"PORT": {{nodeServerPort}}
			},
			"log_date_format": "YYYY-MM-DD HH:mm Z",
			"error_file": "logs/pm2-error.log",
			"out_file": "logs/pm2-out.log"
		}
	]
}
