{
	"name": "cool-web",
	"script": "./src/server.js",
	"exec_mode": "cluster",
	"instances": 4,
	"instance_var": "INSTANCE_ID",
	"max_memory_restart": "1G",
	"autorestart": true,
	"watch": ["src", "config"],
	"env": {
		"NODE_ENV": "production",
		"PORT": 3000
	},
	"env_dev": {
	    "NODE_ENV": "development",
	    "PORT": 3001
	},
	"log_date_format": "YYYY-MM-DD HH:mm Z",
	"error_file": "logs/pm2-error.log",
	"out_file": "logs/pm2-out.log"
}
